.flash-messages
  - types = { notice: "", error: "alert", success: "success" }
  - types.keys.each do |type|
    / - flash.notice = "Test Message Goes Here"
    - if flash[type]
      - messages = Array(flash[type])
      - messages.each do |message|
        %h2
          %hr
          .alert-box.radius{:class => types[type], "data-alert" => ""}
            = message
            %a.close{href: ""} Ã—
          %hr
      - flash[type] = nil

