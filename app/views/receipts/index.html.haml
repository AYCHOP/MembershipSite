- content_for :page_title do
  Receipts

%h1
  Receipts

.col-xs-8
  %table.table
    %thead
      %tr
        %th
          Invoice Id
        %th
          Amount
        %th
          Receipt
    %tbody
      - if ! @receipts.empty?
        - @receipts.each do |receipt|
          %tr
            %td
              = receipt.invoice_id
            %td
              = receipt.amount
            %td
              = link_to "Receipt", receipt_path(receipt.invoice_id)
      - else
        %tr
          %td{ colspan: "3" }
            You have no receipts.
