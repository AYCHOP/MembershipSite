- content_for :page_title do
  Contact Us

.full-width-container
  .container
    %h1.title.martop
      Contact Information

  .googlemap
    <iframe width="100%" height="400" frameborder="0" scrolling="no" marginheight="0" marginwidth="0" src="https://maps.google.co.in/maps?f=q&amp;source=s_q&amp;hl=en&amp;geocode=&amp;q=Level+1+41-43+Stewart+st+Richmond+VIC,+3121+Australia&amp;aq=&amp;sll=20.983588,82.752628&amp;sspn=46.768023,80.859375&amp;ie=UTF8&amp;hq=&amp;hnear=1%2F41-43+Stewart+St,+Richmond+Victoria+3121,+Australia&amp;t=m&amp;z=14&amp;ll=-37.823854,144.991246&amp;output=embed"></iframe>

  .container
    .col-sm-6.col-md-4
      %h3
        Please feel free to send us an email or fill in our handy contact form. We aim to reply within 24 hours.

      .addressinfo
        %span
          Address
        %br
        Level 2
        %br
        41-43 Stewart st,
        %br
        Richmond,
        %br
        VIC, 3121
        %br
        Australia
        %br
        %br
        %span
          Email
        %br
        %a{"href" => "mailto:hello@startupvictoria.com.au "}
          hello@startupvictoria.com.au 

    .col-sm-6.col-md-8
      .form-basic{ role: "form" }
        = form_for(contact_form, url: contacts_path) do |f|
          .formrow1
            %p
              Name
              %span.required
                *
            = f.text_field :full_name, class: "form-control", placeholder: "Full Name", :autofocus => 'autofocus'
          .formrow1
            %p
              Email
              %span.required
                *
            = f.email_field :email, class: "form-control", placeholder: "me@example.com"

          .formrow1
            %p
              Subject
              %span.required
                *
            = f.text_field :subject, class: "form-control", placeholder: "Subject"

          .formrow1
            %p
              Message
              %span.required
                *
            = f.text_area :message, class: "form-control", id: "contact-us-form-text-area", placeholder: "Message"

          = render :partial => "shared/on_form_error", :locals => { form: contact_form }

          .formrow1btn
            %button.btn.btn-lg.btn-primary.btn-block{ type: "submit" }
              Send


= javascript_include_tag "on-form-error"
