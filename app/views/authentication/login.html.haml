- content_for :spartan_header_footer do
  /

%div.form-basic.login-form{ role: "form" }
  = form_for(log_in_form, url: authenticate_url) do |f|

    %h2.form-basic-heading
      Login

    = f.email_field :email, class: "form-control", placeholder: "Email address", :autofocus => 'autofocus'

    .form-group.on-form-error-group
      = f.password_field :password, class: "form-control on-form-error-focus", placeholder: "Password"

    - if log_in_form.errors.any?

      %ul.list-unstyled.on-form-error-message
        - log_in_form.errors.full_messages.each do |message|
          %li
            = message

    %button.btn.btn-lg.btn-primary.btn-block{ type: "submit" }
      Login

= javascript_include_tag "on-form-error"
